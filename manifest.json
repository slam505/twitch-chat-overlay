{
  "manifest_version": 3,
  "name": "Twitch Chat Highlighter for OBS",
  "version": "1.0.0",
  "description": "Highlight Twitch chat messages and display them on your OBS stream via WebSocket. If you have any issues or want to offer me a job, please contact me via stevenlam505@gmail.com",
  "author": "slam505",
  "homepage_url": "https://github.com/slam505/twitch-chat-overlay",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.twitch.tv/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.twitch.tv/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.svg"
  },
  "icons": {
    "16": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  }
}

